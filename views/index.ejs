<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/main.css" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <div>
      <h2>Categories</h2>
      <div>
        <% if (categories && categories.length > 0) { %>
        <ul>
          <% categories.forEach(category => { %>
          <li>
            <div class="category-container">
              <p><%= category.name %></p>
            </div>
          </li>
          <% }); %>
        </ul>
        <% } %>
      </div>
    </div>
    <div>
      <h2>Items</h2>
      <div>
        <% if (items && items.length > 0) { %>
        <ul>
          <% items.forEach(item => { %>
          <li>
            <div class="item-container">
              <p><%= item.name %></p>
            </div>
          </li>
          <% }); %>
        </ul>
        <% } %>
      </div>
    </div>

    <form action="/add-category" method="POST">
      <label for="newCategory">Add Category</label>
      <input type="text" name="newCategory" id="newCategory" />
      <button type="submit">Submit</button>
    </form>
    <form action="/add-item" method="POST">
      <label for="newItem">Add Item</label>
      <input type="text" name="newItem" id="newItem" required />
      <label for="itemCategory">Item Category</label>
      <input type="text" name="itemCategory" id="itemCategory" />
      <button type="submit">Submit</button>
    </form>

    <div>
      <form
        action="/delete-all-categories"
        method="POST"
        onsubmit="return confirm('Are you sure you want to delete all categories?');"
      >
        <button type="submit">Delete All Categories</button>
      </form>
    </div>
    <div>
      <form
        action="/delete-all-items"
        method="POST"
        onsubmit="return confirm('Are you sure you want to delete all items?');"
      >
        <button type="submit">Delete All Items</button>
      </form>
    </div>
    <div id="backdrop" class="hidden"></div>
    <div id="modal" class="hidden">
      <div id="modalContent"></div>
      <button id="closeBtn">Close</button>
    </div>
    <script src="/scripts/scripts.js"></script>
  </body>
</html>
